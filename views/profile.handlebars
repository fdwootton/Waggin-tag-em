{{!-- GET user pets to display, option to add, edit, or delete pets --}}
{{#if logged_in}}

<h4> Welcome Back, {{user_name}} !</h4>

</br>

{{!-- Modal to add new pet --}}
<a class="waves-effect waves-light btn modal-trigger .modal-close" href="#add-modal">Add New Pet</a>
    <div id="add-modal" class="modal">
        <div class="modal-content">
            <p>Add pet form</p>
        </div>
    </div>

{{!-- List of users pets --}}
    {{#each pets as |pet| }}
        <div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image">
                <img src="/images/schafer-dog-4312716_1920.jpg">
                <span class="card-title">{{name}}</span>
                <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">+</i></a>
            </div>
            <div class="card-content">
                <p>Breed: {{breed}}</p>
                <p>Sex: {{sex}}</p>
                <p>Age: {{age}}</p>
                <p>Temperament: {{temperament}}</p>
                <p>About Me: {{about_me}}</p>
                <p>About You: {{about_you}}</p>
                <!-- Edit Pet Modal Trigger -->
                <a class="waves-effect waves-light btn modal-trigger .modal-close" href="#modal4">Edit Pet</a>
                    <div id="modal4" class="modal">
                        <div class="modal-content">
                            <p>Edit pet form</p>
                        </div>
                    </div>
                <!-- Delete Pet Modal Trigger -->
                <a class="waves-effect waves-light btn modal-trigger .modal-close" href="#modal3">Delete Pet</a>
                    <div id="modal3" class="modal">
                        <div class="modal-content">
                            Are you sure you want to delete this Pet?
                            <button id="yes-btn">Yes</button>
                            <button id="no-btn">No</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
{{/each}}

{{else}}

<h5 class="center">Log in to your account to view profile</h5>

{{/if}}

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="/js/profile.js"></script>
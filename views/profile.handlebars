{{!-- GET user posts to display, option to create post or view posts --}}
{{#if logged_in}}

<h4> Welcome Back, {{user_name}} !</h4>

</br>

<div class ="row center">
    <a href="/dashboard/new-post" class="btn waves-effect waves-light create-post-btn" type="button" name="action">New
    <i class="material-icons right">lightbulb</i>
    </a>
</div>

{{#each posts as |posts| }}

<div class="col s12 m6">
    <div class="card posts-card">
        <div class="card-content">
            <div class ="col right">
                <button data-delete-id="{{posts.id}}" class="btn waves-effect waves-light delete-btn" type="button" name="action">Delete
                <i class="material-icons right">delete</i>
                </button>
            </div>
            <div class ="col right">
                <button data-edit-id="{{posts.id}}" class="btn waves-effect waves-light edit-btn" type="button" name="action">Edit
                <i class="material-icons right">edit</i>
                </button>
            </div>
            <a class="card-title orange-text text-darken-4" href="/posts/{{posts.id}}">{{posts.post_title}}</a>
            <p>
                {{posts.post_content}}
            </p>
        </div>
        <div class="card-action">
            <p>Created by {{user.user_name}} on {{format_date posts.createdAt}} 
            {{#if udpated}}
            <span> || Edited on {{format_date posts.updatedAt}}</span>
            {{/if}}
            </p>
        </div>
    </div>
</div>

{{/each}}

    {{#each pets as |pet| }}
        <div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image">
                <img src="/images/schafer-dog-4312716_1920.jpg">
                <span class="card-title">{{name}}</span>
                <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">+</i></a>
            </div>
            <div class="card-content">
                <p>Breed: {{breed}}</p>
                <p>Sex: {{sex}}</p>
                <p>Age: {{age}}</p>
                <p>Temperament: {{temperament}}</p>
                <p>About Me: {{about_me}}</p>
                <p>About You: {{about_you}}</p>
                <button data-delete-id="{{id}}" class="btn waves-effect waves-light delete-btn" type="button" name="action">Delete Pet
                <i class="material-icons right">delete</i>
                </button>
            </div>
        </div>
    </div>
</div>
{{/each}}

{{else}}

<h4 class="center cyan-text text-darken-3">Hold up!</h4>
<h5 class="center"> You have to log in first!</h5>

{{/if}}

